@model TPLOCAL1.Models.FormModel
@Html.ValidationSummary(false, "")

<!DOCTYPE html>
<html>

<head>
    <title>
        Formulaire
    </title>
    <link href="~/ressources/Index.css" rel="stylesheet" />

</head>



<body>
    <header>
        <img src="~/ressources/GroupeHN.png" class="image" alt="GroupeHN" />
        <h1>Formulaire TP HN avis</h1>
        

    </header>

    <nav>
        <ul>
            <li><a href="/Home/Index">Accueil</a></li>
            <li><a href="/Home/Index/OpinionList">Liste avis</a> </li>
        </ul>
    </nav>

    <section>
        <table>
            <caption>Informations Personnelles</caption>
            <form asp-action="ValidationFormulaire">
            <tr>
                <td>Nom</td>
                <td>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>                    
                </td>

            </tr>

            <tr>
                <td>Prénom</td>
                <td>
                    <input asp-for="Forename" class="form-control" />
                    <span asp-validation-for="Forename" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td>Sexe</td>
                <td>
                    <select name="Gender" id="Sexes">
                        <option value="Select" selected>Sélectionner un sexe</option>
                        <option value="Man">Homme</option>
                        <option value="Woman">Femme</option>
                        <option value="Other">Autre</option>
                    </select>
                </td>

            </tr>

            <tr>
                <td>Adresse</td>
                <td>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                    
                </td>
            </tr>
            
            <tr>
                <td>Code Postal</td>
                <td>
                    <input asp-for="ZipCode" class="form-control" />
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </td>

            </tr>

            <tr>
                <td>Ville</td>
                <td>
                    <input asp-for="Town" class="form-control" />
                    <span asp-validation-for="Town" class="text-danger"></span>
                </td>
            </tr>

            <tr>
                <td>Adresse mail</td>
                <td>
                    <input asp-for="EmailAdress" class="form-control" />
                    <span asp-validation-for="EmailAdress" class="text-danger"></span>
                </td>

            </tr>

            </form>

        </table>
        
            

        
    </section>

    <section>
        <table>
            <caption>Informations formation suivie</caption>
            <form asp-action="ValidationFormulaire">
            <tr>
                <td>Date début formation</td>
                <td>
                    <input asp-for="DateDebutFormation" class="form-control" />
                    <span asp-validation-for="DateDebutFormation" class="text-danger"></span>
                </td>

            </tr>

            <tr>
                <td>Formation suivie</td>
                <td>
                    <select name="Formation" id="Formation">
                        <option value="Select" selected>Sélectionner une formation</option>
                        <option value="Cobol">Formation Cobol</option>
                        <option value="Object">Formation Objet</option>
                        <option value="DualSkills">Formation Dual Skills</option>
                    </select>
                </td>
            </tr>
            </form>
        </table>
    </section>

    <section>
        <table>
            <caption>Avis sur la formation</caption>
            <form asp-action="ValidationFormulaire">
            <tr>
                <td>Formation Cobol</td>
                <td>
                    <input asp-for="AvisFormationCobol" class="form-control" />
                    </td>

            </tr>

            <tr>
                <td>Formation C#</td>
                <td>
                    <input asp-for="AvisFormationCs" class="form-control" />                 
                </td>
            </tr>
            </form>
        </table>
    </section>


    <form asp-action="ValidationFormulaire">
        
        <input type="submit" value="Valider" class="validation" /> 

    </form>
    

</body>



</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

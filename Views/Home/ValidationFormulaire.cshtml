
@model TPLOCAL1.Models.FormModel

<!DOCTYPE html>
<html>

<head>
    <title>
        Page de validation
    </title>
    <link href="~/ressources/Index.css" rel="stylesheet" />

</head>



<body>
    <header>
        <img src="~/ressources/GroupeHN.png" class="image" alt="GroupeHN" />
        <h1>Page de validation</h1>        
    </header>

    <nav>
        <ul>
            <li><a href="/Home/Index">Accueil</a></li>
            <li><a href="/Home/Index/OpinionList">Liste avis</a> </li>
        </ul>
    </nav>

    

    <section> 
        <a>Votre formulaire a bien été pris en compte </a>       
    </section>

    <section>
        <table>
            <caption>Informations Personnelles</caption>
            <tr>
                <td>Nom</td>
                <td>
                    @Html.DisplayFor(model => model.Name)
                </td>

            </tr>

            <tr>
                <td>Prénom</td>
                <td>
                        @Html.DisplayFor(model => model.Forename)
                </td>
            </tr>
            <tr>
                <td>Sexe</td>
                <td>
                        @Html.DisplayFor(model => model.Gender)
                </td>

            </tr>

            <tr>
                <td>Adresse</td>
                <td>
                        @Html.DisplayFor(model => model.Address)
                </td>
            </tr>

            <tr>
                <td>Code Postal</td>
                <td>
                        @Html.DisplayFor(model => model.ZipCode)
                </td>

            </tr>

            <tr>
                <td>Ville</td>
                <td>
                        @Html.DisplayFor(model => model.Town)
                </td>
            </tr>

            <tr>
                <td>Adresse mail</td>
                <td>
                        @Html.DisplayFor(model => model.EmailAdress)
                </td>

            </tr>

        </table>




    </section>
    <br />


    <section>
        <table>
            <caption>Informations formation suivie</caption>
            
            <tr>
                <td>Date début formation</td>
                <td>
                    @Html.DisplayFor(model => model.DateDebutFormation)
                </td>

            </tr>

            <tr>
                <td>Formation suivie</td>
                <td>
                    @Html.DisplayFor(model => model.FormationSuivie)
                </td>
            </tr>
        </table>
    </section>

    <br />
    <section>
        <table>
            <caption>Avis sur la formation</caption>
            <tr>
                <td>Formation Cobol</td>
                <td>
                    @Html.DisplayFor(model => model.AvisFormationCobol)
                </td>

            </tr>

            <tr>
                <td>Formation C#</td>
                <td>
                    @Html.DisplayFor(model => model.AvisFormationCs)
                </td>
            </tr>
        </table>
    </section>



</body>



</html>